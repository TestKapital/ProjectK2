@page
@using ProjectKapital.Models
@model ProjectKapital.Pages.Customers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Insert Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.FirstName" class="control-label"></label>
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.LastName" class="control-label"></label>
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Birthday" class="control-label"></label>
                <input asp-for="Customer.Birthday" class="form-control" />
                <span asp-validation-for="Customer.Birthday" class="text-danger"></span>
            </div>
             <div class="form-group">                  
                <label asp-for="Customer.Gender" class="control-label"></label>
                <select asp-for="Customer.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
						<option disabled selected></option>
			    </select>
                <span asp-validation-for="Customer.Gender" class="text-danger"></span>                      
            </div>
            <div class="form-group">                  
                <label asp-for="Customer.CustomerCategoryId" class="control-label"></label>
                <select asp-for="Customer.CustomerCategoryId" asp-items="@Model.CustomerCategories" class="form-select">
                    <option disabled selected>Select Category</option>
                </select>
                <span asp-validation-for="Customer.CustomerCategoryId" class="text-danger"></span>                  
            </div>
            <div class="form-group">
                <label asp-for="Customer.PhoneNumber" class="control-label"></label>
                <input asp-for="Customer.PhoneNumber" class="form-control" />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Credit" class="control-label"></label>
                <input asp-for="Customer.Credit" class="form-control" />
                <span asp-validation-for="Customer.Credit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
